@model ErrorViewModel

<div class="container mt-4">
    <div class="alert alert-danger">
        <h4 class="alert-heading">Error</h4>
        <p>@Model.Message</p>
        <hr>
        <p class="mb-0">
            <small class="text-muted">Request ID: @Model.RequestId</small>
        </p>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "FilePortal")" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Back to Server List
        </a>
    </div>
</div>